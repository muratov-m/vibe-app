@page
@model ProfileModel
@{
    ViewData["Title"] = "Профиль";
}

<div class="container">
    <div class="card auth-card">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Профиль пользователя</h2>
            
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success" role="alert">
                    @Model.StatusMessage
                </div>
            }
            
            <div class="mb-4">
                <h5>Информация об аккаунте</h5>
                <div class="card bg-light">
                    <div class="card-body">
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Имя пользователя:</strong> @Model.Username</p>
                        <p class="mb-0"><strong>Подтвержден:</strong> 
                            @if (Model.IsEmailConfirmed)
                            {
                                <span class="badge bg-success">Да</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Нет</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            
            <h5>Изменить пароль</h5>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.OldPassword" class="form-label">Текущий пароль</label>
                    <input asp-for="Input.OldPassword" class="form-control" type="password" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Input.NewPassword" class="form-label">Новый пароль</label>
                    <input asp-for="Input.NewPassword" class="form-control" type="password" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Подтверждение нового пароля</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-primary">Изменить пароль</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

