@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container">
    <div class="card auth-card">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Регистрация</h2>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }
            
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="user@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Минимум 6 символов" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="form-text">Пароль должен содержать минимум 6 символов, включая заглавные и строчные буквы, и цифры.</div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Подтверждение пароля</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Повторите пароль" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
            </form>
            
            <hr class="my-4">
            
            <p class="text-center">
                Уже есть аккаунт? <a asp-page="/Account/Login">Войдите</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

